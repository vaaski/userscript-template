{
	"name": "userscript-template",
	"version": "1.0.0",
	"description": "A template for creating a userscript",
	"author": "vaaski <admin@vaa.ski>",
	"module": "src/index.ts",
	"scripts": {
		"start": "tsup",
		"dev": "tsup --watch src --watch styles --watch tsup.config.ts",
		"format": "prettier --write src styles tsup.config.ts",
		"lint": "biome lint --write src"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.14.15",
		"prettier": "^3.3.3",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	}
}
